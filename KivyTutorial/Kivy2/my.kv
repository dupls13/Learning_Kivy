<MyGrid>

	name: name
	email: email

	GridLayout:
		cols:1
		size: root.width, root.height

		GridLayout:
			cols:2

			Label:
				text: "Name: "

			TextInput:
				id: name
				multiline:False

			Label:
				text: "Emails: "

			TextInput:
				id:email
				multiline:False

		Button:
			text: "Submit"
			on_press:root.btn()